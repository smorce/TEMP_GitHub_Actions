# Visual Studio CodeのRemote Development拡張機能を使うための設定ファイル
{
  # 設定を一意に識別する任意の名称です。
  "name": "Python3.9 開発環境Docker",
 
  # コンテナを作成するためのDockerfileのファイル名を指定します。
  # Dockerfileの内容については後述します。
  "dockerFile": "Dockerfile",
  
  # こちらで記述しているので Dockerfile の方は記述なし
  # やっぱりワーキングディレクトリは不要かな
  # "workspaceFolder": "/app",
 
  # この設定によりホストOSの4200宛の通信がコンテナの4200に転送されます。
  # ホストPCからブラウザで動作確認するために必要です。
  # こちらで設定しているので Dockerfile の方は記述なし
  "forwardPorts": [4200],
 
  # デフォルトではVisual Studio Codeからのコンテナ起動時のコマンドは
  # while sleep 1000; do :; doneに上書きされてしまいますが、それを防止します。
  "overrideCommand": false,
  
  # リモート先のコンテナにもVS Codeがインストールされるため
  # リモート先のVSCodeにインストールする拡張機能
  "extensions": [
        "ms-python.python",
        "TabNine.tabnine-vscode",
        "njpwerner.autodocstring",
        "mosapride.zenkaku",
        "octref.vetur",
        "ms-python.vscode-pylance",
        "streetsidesoftware.code-spell-checker"
    ],
}